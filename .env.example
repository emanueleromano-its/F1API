# F1API Configuration
# Copy this file to .env and adjust values as needed

# Flask Configuration
PORT=5000
FLASK_ENV=development
FLASK_DEBUG=True

# F1 Open API
F1OPEN_API_BASE=https://api.openf1.org/v1

# Cache Configuration
# Path to SQLite cache database
CACHE_DB_PATH=./data/cache.db

# Default TTL for cache entries in seconds
# 300 = 5 minutes (good for dynamic data)
# 3600 = 1 hour (good for historical/static data)
CACHE_TTL_SECONDS=300

# Authentication Configuration
# Path to SQLite users database
AUTH_DB_PATH=./data/users.db

# Flask secret key for session management
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-a-new-one

# Session cookie security (set to True in production with HTTPS)
SESSION_COOKIE_SECURE=False
